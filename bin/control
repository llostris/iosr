#!/bin/bash -eu

source $OPENSHIFT_CARTRIDGE_SDK_BASH
source $OPENSHIFT_SPARK_DIR/bin/utils

echo $(getLogTimeStamp) ": spark-cartridge control.sh - $1" >> $OPENSHIFT_SPARK_LOG

function start {
  echo $(getLogTimeStamp) ": cartridge: start" >> $OPENSHIFT_SPARK_LOG

  createCluster
}

function stop {
  echo $(getLogTimeStamp) ": cartridge: stop" >> $OPENSHIFT_SPARK_LOG

  stopCluster

}

function restart {
  stop
  start
  echo $(getLogTimeStamp) ": restart" >> $OPENSHIFT_SPARK_LOG

}

function status {
  echo $(getLogTimeStamp) ": status" >> $OPENSHIFT_SPARK_LOG
}

function reload {
  echo $(getLogTimeStamp) ": reload" >> $OPENSHIFT_SPARK_LOG
  client_result "Reloading Spark Cartridge"
}

function tidy {
  echo $(getLogTimeStamp) ": tidy" >> $OPENSHIFT_SPARK_LOG
}

function catchall {
    echo $(getLogTimeStamp) ": not yet implemented" >> $OPENSHIFT_SPARK_LOG
}

case "$1" in
  start)       start ;;
  stop)        stop ;;
  restart)     restart ;;
  status)      status ;;
  reload)      reload ;;
  tidy)        tidy ;;
  pre-build)   catchall ;;
  build)       catchall ;;
  deploy)      catchall ;;
  post-deploy) catchall ;;
  *)           exit 0
esac

exit 0
