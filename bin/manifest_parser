#!/bin/bash -e

function parse_yaml {
   local prefix=$2
   local s='[[:space:]]*' w='[a-zA-Z0-9_]*' fs=$(echo @|tr @ '\034')
   sed -ne "s|^\($s\):|\1|" \
        -e "s|^\($s\)\($w\)$s:$s[\"']\(.*\)[\"']$s\$|\1$fs\2$fs\3|p" \
        -e "s|^\($s\)\($w\)$s:$s\(.*\)$s\$|\1$fs\2$fs\3|p"  $1 |
   awk -F$fs '{
      indent = length($1)/2;
      vname[indent] = $2;
      for (i in vname) {if (i > indent) {delete vname[i]}}
      if (length($3) > 0) {
         vn=""; for (i=0; i<indent; i++) {vn=(vn)(vname[i])("_")}
         printf("%s%s%s=\"%s\"\n", "'$prefix'",vn, toupper($2), $3);
      }
   }'
}

function substitude_dashes {
  awk -F= 'OFS=FS { gsub("-", "_", $1); }1' $1
}

function parse_manifest {
  mkdir -p $OPENSHIFT_SPARK_DIR/temp

  substitude_dashes $OPENSHIFT_REPO_DIR/manifest.yml > $OPENSHIFT_SPARK_DIR/temp/manifest.tmp.yml
  echo "Manifest: substituted dashes with underscores."
  echo `cat $OPENSHIFT_SPARK_DIR/temp/manifest.tmp.yml` >> $OPENSHIFT_SPARK_LOG
  
  parse_yaml $OPENSHIFT_SPARK_DIR/temp/manifest.tmp.yml "SPARK_" > $OPENSHIFT_SPARK_DIR/manifest.properties
  echo "Parsed manifest: " >> $OPENSHIFT_SPARK_LOG
  echo `cat $OPENSHIFT_SPARK_DIR/manifest.yml` >> $OPENSHIFT_SPARK_LOG
  
  rm $OPENSHIFT_SPARK_DIR/temp/manifest.tmp.yml
}

